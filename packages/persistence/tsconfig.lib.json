{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "moduleResolution": "bundler",
    "module": "es2022",
    "types": [
      "node"
    ]
  },
  "include": [
    "../../types/cloudflare-runtime.d.ts",
    "src/**/*.ts",
    "src/**/migrations/**/*.json",
    "src/**/migrations/**/*.js"
  ],
  "references": [
    {
      "path": "../domain/training/application/tsconfig.lib.json"
    },
    {
      "path": "../domain/training/core/tsconfig.lib.json"
    },
    {
      "path": "../shared/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}