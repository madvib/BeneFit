{
  "name": "@bene/persistence",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "drizzle-orm": "^0.30.10",
    "better-sqlite3": "^9.4.3"
  },
  "nx": {
    "sourceRoot": "packages/infra/persistence/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/infra/persistence/dist",
          "main": "packages/infra/persistence/src/index.ts",
          "tsConfig": "packages/infra/persistence/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    },
    "tags": [
      "type:infrastructure",
      "scope:persistence",
      "layer:infrastructure"
    ]
  }
}
