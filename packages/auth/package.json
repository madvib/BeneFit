{
  "name": "@bene/auth",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "@bene/shared-domain": "workspace:*",
    "@bene/utils": "workspace:*",
    "better-auth": "^1.4.1",
    "drizzle-orm": "catalog:"
  },
  "scripts": {
    "auth:schema": "pnpm dlx @better-auth/cli generate --config src/infra/services/auth.ts --output src/data/schema/schema.ts",
    "db:generate": "drizzle-kit generate --config=src/data/drizzle.config.ts",
    "db:migrate": "wrangler d1 migrations apply benefit-auth-db",
    "db:studio": "drizzle-kit studio --config=src/data/drizzle.config.ts",
    "lint": "eslint ."
  },
  "nx": {
    "sourceRoot": "packages/domain/auth/src",
    "targets": {
      "build-types": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/auth/dist",
          "main": "packages/auth/src/index.ts",
          "tsConfig": "packages/auth/tsconfig.lib.json"
        }
      },
      "build": {
        "executor": "@nx/js:swc",
        "dependsOn": [
          "build-types"
        ],
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/auth/dist",
          "main": "packages/auth/src/index.ts",
          "tsConfig": "packages/auth/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    },
    "tags": [
      "type:feature",
      "scope:auth",
      "slice:vertical",
      "boundary:cross-cutting"
    ],
    "name": "@bene/auth"
  }
}
