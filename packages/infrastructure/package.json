{
  "name": "@bene/infrastructure",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "auth:schema": "pnpm dlx @better-auth/cli generate --config src/auth/better-auth/auth.ts --output src/auth/data/schema/schema.ts",
    "migration:generate": "pnpm drizzle-kit generate --config ./src/auth/data/drizzle.config.ts",
    "migration:push": "pnpm drizzle-kit push --config ./src/auth/data/drizzle.config.ts",
    "drizzle:studio": "pnpm drizzle-kit studio --config ./src/auth/data/drizzle.config.ts"
  },
  "exports": {
    "./auth": "./src/auth/index.ts",
    "./blog": "./src/blog/index.ts",
    "./connections": "./src/connections/index.ts",
    "./shared": "./src/shared/index.ts",
    "./repositories": "./src/repositories/index.ts",
    "./services": "./src/services/index.ts"
  },
  "dependencies": {
    "better-auth": "^1.4.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "@bene/domain-shared": "workspace:*",
    "@bene/domain-coach": "workspace:*",
    "@bene/domain-blog": "workspace:*",
    "@bene/domain-user-profile": "workspace:*",
    "@bene/domain-workouts": "workspace:*",
    "@bene/domain-fitness-plan": "workspace:*",
    "@bene/domain-integrations": "workspace:*",
    "@bene/domain-auth": "workspace:*",
    "@bene/utils": "workspace:*"
  },
  "nx": {
    "tags": [
      "layer:infrastructure"
    ]
  }
}
