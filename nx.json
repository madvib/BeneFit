{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "include": ["packages/infrastructure/*", "packages/domain/*", "packages/utils/*"],
      "options": {
        "build": false,
        "typecheck": {
          "targetName": "typecheck"
        }
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "include": [
        "packages/domain/coach/*",
        "packages/domain/integrations/*",
        "packages/domain/shared/*",
        "packages/domain/training/application/*",
        "packages/domain/training/core*",
        "tools/nx-plugin/*",
        "packages/infra/persistence/*",
        "packages/infra/training/*",
        "packages/infra/integrations/*",
        "packages/infra/coach/*",
        "packages/auth/*",
        "packages/blog/*",
        "packages/infra/shared/*"
      ],
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    },
    {
      "plugin": "@nx/vitest",
      "options": {
        "testTargetName": "vitest:test",
        "ciTargetName": "test-ci"
      }
    }
  ],
  "targetDefaults": {
    "test": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "build-types": {
      "cache": true,
      "dependsOn": ["^build-types"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["build-types", "^build"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/js:swc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    }
  },
  "generators": {
    "@nx/react": {
      "library": {
        "unitTestRunner": "none"
      }
    }
  }
}
