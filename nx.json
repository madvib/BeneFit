{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [
    {
      "plugin": "./tools/nx-plugin/src/plugins/swc_inference.ts",
      "options": { "buildTargetName": "build", "buildTypesTargetName": "build-types" }
    },
    { "plugin": "./tools/nx-plugin/src/plugins/eslint_inference.ts" },
    {
      "plugin": "@nx/js/typescript",
      "include": ["packages/**", "tools/**"],
      "options": {
        "build": false,
        "typecheck": {
          "targetName": "typecheck"
        }
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },

    {
      "plugin": "@nx/vitest",
      "options": {
        "testTargetName": "vitest:test",
        "ciTargetName": "test-ci"
      }
    }
  ],
  "targetDefaults": {
    "test": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "@nx/eslint:lint": {
      "inputs": ["default", "^default"],
      "cache": true,
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"],
        "exclude": ["{projectRoot}/dist/**/*", "{projectRoot}/node_modules/**/*"],
        "fix": true
      }
    },

    "typecheck": {
      "executor": "@nx/js:tsc",
      "dependsOn": [],
      "options": {
        "tsConfig": "{projectRoot}/tsconfig.json",
        "noEmit": true
      },
      "cache": true
    },

    "@nx/js:swc": {
      "inputs": ["default", "^default"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "skipTypeCheck": true,
        "stripLeadingPaths": true
      },
      "cache": true
    },
    "@nx/js:tsc": {
      "inputs": ["default", "^default"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "emitDeclarationOnly": true,
        "declaration": true
      },
      "cache": true
    }
  },
  "generators": {
    "@nx/react": {
      "library": {
        "unitTestRunner": "none"
      }
    }
  }
}
