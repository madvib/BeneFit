{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/providers/repositories.ts",
    "src/providers/auth-use-cases.ts",
    "next.config.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/infrastructure"
    },
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/application"
    }
  ]
}