{
  "name": "@bene/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "nx lint",
    "test": "nx test",
    "test:ui": "nx test --ui",
    "test:run": "nx test run",
    "test:coverage": "nx test run --coverage",
    "cf-build": "opennextjs-cloudflare build",
    "cf-deploy": "opennextjs-cloudflare deploy",
    "deploy": "pnpm run cf-build && pnpm run cf-deploy",
    "preview": "pnpm run cf-build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ../../types/cloudflare-env.d.ts",
    "auth:migration:apply:local": "wrangler d1 migrations apply DB_USER_AUTH --local"
  },
  "dependencies": {
    "@bene/shared-domain": "workspace:*",
    "@bene/utils": "workspace:*",
    "@opennextjs/cloudflare": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "hono": "^4.10.6",
    "lucide-react": "^0.546.0",
    "next": "16.0.3",
    "next-themes": "^0.4.6",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "nx": {
    "tags": [
      "type:app",
      "scope:web",
      "platform:nextjs",
      "layer:presentation"
    ]
  }
}
