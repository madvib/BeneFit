{
  "name": "BeneFit NX Monorepo",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers-extra/features/pnpm:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "CLOUDFLARE_API_TOKEN": "${localEnv:CLOUDFLARE_API_TOKEN}",
    "GITHUB_PAT": "${localEnv:GITHUB_PAT}",
    "PNPM_HOME": "/home/node/.local/share/pnpm/"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:${containerEnv:PNPM_HOME}"
  },
  "mounts": [
    "source=pnpm_home,target=/home/node/.local/share/pnpm/,type=volume"
  ],
  "postCreateCommand": "pnpm config set store-dir $PNPM_HOME/store && pnpm install", //sudo chown -R node:node $PNPM_HOME && 
  "runArgs": [
    "--env-file",
    ".devcontainer/.env"
  ],
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "nrwl.angular-console"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  }
}