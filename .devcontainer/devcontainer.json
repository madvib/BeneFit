{
  "name": "BeneFit NX Monorepo",
  // "image": "benefit-nx-dev:latest",
  "build": {
    "dockerfile": "Dockerfile", // Assumes Dockerfile is in the same directory
    "context": ".." // Context set to the project root (one level up)
  },
  "containerEnv": {
    "CLOUDFLARE_API_TOKEN": "${localEnv:CLOUDFLARE_API_TOKEN}",
    "GITHUB_PAT": "${localEnv:GITHUB_PAT}"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:${containerEnv:PNPM_HOME}",
    "PNPM_HOME": "/home/node/.local/share/pnpm"
  },
  "mounts": [
    "source=${localEnv:HOME}/.local/share/pnpm,target=/home/node/.local/share/pnpm/,type=bind"
  ],
  "postCreateCommand": "pnpm config set store-dir $PNPM_HOME/store && pnpm install", //sudo chown -R node:node $PNPM_HOME && 
  "runArgs": [
    "--env-file",
    ".devcontainer/.env"
  ],
  "remoteUser": "node",
  "containerUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  }
}