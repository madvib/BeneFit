{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "es2022"
    ],
    /* Strictness */
    "strict": true,
    "importHelpers": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "@bene/core/*": [
        "./packages/core/src/*"
      ],
      "@bene/application/*": [
        "./packages/application/src/*"
      ],
      "@bene/infrastructure/*": [
        "./packages/infrastructure/src/*"
      ],
      "@bene/utils/*": [
        "./packages/utils/src/*"
      ]
    },
  }
}